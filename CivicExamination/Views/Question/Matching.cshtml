





@model ExaminationEntity.ExaminationModels.CategoryQuestion

@{
    Layout = null;
}

@if (ViewBag.error != null)
{
    foreach(string item in ViewBag.error)
    {
        <h2>@item</h2>
    }
}

@Html.HiddenFor(m => m.Id)
<div class="row">
    <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width:100%;">

                                @Html.TextAreaFor(p => p.Question, 5, 5, new { style = "width:100%;height:100px;", maxlength = 1000, @class = "mdl-textfield__input" })
                                @Html.Label("Question", new { @class = "mdl-textfield__label" })
                                @*@Html.ValidationMessageFor(p => p.Question, null, new { @class = "formErrorCode " })*@
                            </div>
                            <label class="btn btn-default btn-file">
                                @*<input id="mainImageUpload" name="MainQuestionImageModel" type="file" style="display: none;">*@
                                Browse Question Image @Html.TextBoxFor(m => m.MainQuestionImageModel, new { id = "mainImageUpload", type = "file", style = "display: none;" })
                            </label>
                            <button type="button" id="resetMainQuestionImage" class="btn btn-danger">Reset Image</button>
                            <div Id="mainImageContainer">
                                @if (Model.Id != 0)
                                {
                                    @Html.HiddenFor(x => x.imageId);
                                }
                                @if (Model.MainQuestionImage != null)
                                 {
                                     <img alt="Main Image" class="questionImg" src="@String.Format("data:{0};base64,{1}",Model.MainQuestionImage.contentType,Model.MainQuestionImage.content64base)" />                        
                                 }
                            </div>
                            <hr />
                            <div class="panel panel-success">
                                <div class="panel-heading">Choices Panel</div>
                                <div class="panel-body">
                                    <table id="choicesTable" class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    IsCorrect
                                                </th>
                                                <th>
                                                    Choice Description
                                                </th>
                                                <th>
                                                    Choice Image
                                                </th>
                                                <th>
                                                    Action
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if(Model.Choices != null)
                                                {
                                                    foreach(var item in Model.Choices.Where(x=>x.IsDeleted != true))
                                                    {
                                                        Html.RenderPartial("ExamChoicesTemplateCheckBox", item);
                                                    }
                                                }
                                        </tbody>
                                    </table>
                                    <button class="btn btn-success" type="button" id="addChoicesBtn">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
