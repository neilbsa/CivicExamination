@using CivicExamination.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")



</head>
<body class="watermark">




    <div class="container-fluid">
        <div class="row loginContainer">
            <div class="hidden-xs col-sm-12 col-md-12 col-lg-8 carouselContainer">
                <div id="my-carousel" class="carousel slide loginCarousel" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#my-carousel" data-slide-to="1"></li>
                        <li data-target="#my-carousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <center> <img alt="DOOSAN" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="BOBCAT" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>   <img alt="JLG" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="UD" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="SOOSAN" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="SDLG" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="POWER PAVERS" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="VOLVO" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                        <div class="item">
                            <center>  <img alt="VOLVO" class="carouselImage" src="@Url.Content("~/resources/carousel/c8.jpg")"></center>
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
          
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-0">
                @*<div class="container-fluid">*@
                   
                    <div class="row loginFormContainer">

                        <div class="thumbnail backDrop">

                        </div>
                        <div class="thumbnail mythumbnail">
                           
                            <div class="container-fluid">
                                <div class="row">
                                    <center>
                                        <img class="civicLoginLogo" src="@Url.Content("~/resources/companyicons/civiclogo.png")">
                                    </center>
                                </div>
                                <div class="row">
                                    <div class="text-center ApplicationName">Civic examination System</div>
                                </div>
                                <div class="row">
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-signin", id = "login", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "inputEmail", placeholder = "Username" })

                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Password" })
                                        <input type="submit" value="Log in" class="btn btn-lg btn-primary btn-block btn-signin" id="loginbutton" />
                                            <span>&nbsp;</span>
                                           
                                                <div class="row">
                                                    <div class="col-xs-1">
                                                        @Html.CheckBoxFor(m => m.RememberMe)
                                                    </div>
                                                    <div class="col-xs-5">
                                                        @Html.LabelFor(m => m.RememberMe)
                                                    </div>
                                                </div>
                                           


                                    }
                                </div>
                            </div>



                        @*</div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/BootStrap")


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>