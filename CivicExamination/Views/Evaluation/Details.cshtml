
@model ExaminationEntity.ExaminationModels.AppraisalBatch




@Html.AntiForgeryToken()
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Appraisal Details</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    @Html.TextBoxFor(p => p.Description, new { @class = "mdl-textfield__input" })
                                    @Html.Label("Description", new { @class = "mdl-textfield__label" })
                                    @Html.ValidationMessageFor(p => p.Description, null, new { @class = "formErrorCode " })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    @Html.TextBoxFor(p => p.Remarks, new { @class = "mdl-textfield__input" })
                                    @Html.Label("Remarks", new { @class = "mdl-textfield__label" })
                                    @Html.ValidationMessageFor(p => p.Remarks, null, new { @class = "formErrorCode " })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="row">

                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    @Html.TextBoxFor(p => p.Period, new { @class = "mdl-textfield__input" })
                                    @Html.Label("Period", new { @class = "mdl-textfield__label" })
                                    @Html.ValidationMessageFor(p => p.Period, null, new { @class = "formErrorCode " })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                        <div class="row">

                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label is-focused">

                                    @Html.TextBoxFor(p => p.AppraisalDate, "{0:yyyy-MM-dd}", new { @class = "mdl-textfield__input datePickerMdl" })
                                    @Html.Label("Appraisal Date", new { @class = "mdl-textfield__label" })
                                    @Html.ValidationMessageFor(p => p.AppraisalDate, null, new { @class = "formErrorCode " })
                                </div>
                                @Html.ValidationMessageFor(p => p.AppraisalDate, null, new { @class = "formErrorCode " })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2 col-xs-offset-10 col-sm-2 col-sm-offset-10 col-md-2 col-md-offset-10 col-lg-2 col-lg-offset-10">
                  
                    </div>
                </div>


            </div>
        </div>


    </div>


</div>

<div class="row">
    <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
        <div class="list-group ">



            @foreach (var item in Model.Employees)
            {
                <div class="panel panel-default">

                    <div class="panel-body">
                        @Html.Partial("EmployeeCreateSetupReadOnly", item)
                    </div>
                </div>

            }
        </div>
    </div>
</div>
