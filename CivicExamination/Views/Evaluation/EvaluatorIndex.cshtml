@model IEnumerable<ExaminationEntity.ExaminationModels.AppraisalBatch>





<div class="row">
    <div class="myList col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
        <div class="list-group">


            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="list-group-item">
                        <div class="list-group-item-text">
                            <div class="row">
                                <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                    <div class="row" style="font-size:large">
                                        <b> @String.Format("{0}", item.Description)</b>
                                    </div>
                                    <div class="row">
                                        @String.Format("Appraisal Date: {0}", item.AppraisalDate.ToShortDateString())
                                    </div>

                                </div>
                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    @Html.ActionLink("Proceed", "EvaluateeIndex", new { AppraisalId = item.Id }, new { @class = "btn btn-success" })
                                    @*<button class="btn btn-success" >Proceed</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>



