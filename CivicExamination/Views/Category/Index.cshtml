    </div>
</div>
<div class="row">
    <div class="row">
        <div class=" myList col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
            <div class="list-group" id="categoryMainList">


                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        @Html.Partial("IndexItemView", item);
                    }
                }

            </div>
        </div>
    </div>
</div>






@Scripts.Render("~/bundles/modernizr")
