@model ExaminationEntity.ExaminationModels.JobPostingModel

@{
    Layout = null;
}

@using (Html.BeginForm("Update", "JobPosting", FormMethod.Post, new { id = "updateJobPostingFrm" }))
{
    <div id="errorList"></div>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.Id)
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.TextBoxFor(p => p.JobName, new { @class = "mdl-textfield__input" })
                @Html.Label("Job Name", new { @class = "mdl-textfield__label" })
                @Html.ValidationMessageFor(p => p.JobName, null, new { @class = "formErrorCode " })
            </div>
        </div>
    </div>
        <hr />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="min-width:100%">
                    @Html.TextAreaFor(p => p.JobDescription, 5, 5, new { @class = "mdl-textfield__input" })
                    @Html.Label("Job Description", new { @class = "mdl-textfield__label" })
                    @Html.ValidationMessageFor(p => p.JobDescription, null, new { @class = "formErrorCode " })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(p => p.PassingScore, new { @class = "mdl-textfield__input" })
                    @Html.Label("Passing Score(%)", new { @class = "mdl-textfield__label" })
                    @Html.ValidationMessageFor(p => p.PassingScore, null, new { @class = "formErrorCode " })
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

                    @Html.TextBoxFor(p => p.RequestedBy, new { @class = "mdl-textfield__input" })
                    @Html.Label("Requested By", new { @class = "mdl-textfield__label" })
                    @Html.ValidationMessageFor(p => p.RequestedBy, null, new { @class = "formErrorCode " })
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextAreaFor(p => p.Remarks, 5, 5, new { @class = "mdl-textfield__input" })
                    @Html.Label("Remarks", new { @class = "mdl-textfield__label" })
                    @Html.ValidationMessageFor(p => p.Remarks, null, new { @class = "formErrorCode " })
                </div>
            </div>
        </div>
}
